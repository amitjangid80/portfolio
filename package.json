{
    "name": "portfolio-ui",
    "version": "1.0.0",
    "packageManager": "yarn@4.9.4",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build",
        "build:prod": "ng build --configuration production --base-href /portfolio/ --aot --output-hashing=all",
        "watch": "ng build --watch --configuration development",
        "test": "ng test",
        "lint": "ng lint"
    },
    "prettier": {
        "printWidth": 100,
        "singleQuote": true,
        "overrides": [
            {
                "files": "*.html",
                "options": {
                    "parser": "angular"
                }
            }
        ]
    },
    "private": true,
    "dependencies": {
        "@angular/common": "^20.3.0",
        "@angular/compiler": "^20.3.0",
        "@angular/core": "^20.3.0",
        "@angular/forms": "^20.3.0",
        "@angular/platform-browser": "^20.3.0",
        "@angular/router": "^20.3.0",
        "@tailwindcss/postcss": "^4.1.13",
        "postcss": "^8.5.6",
        "primeicons": "^7.0.0",
        "rxjs": "~7.8.2",
        "tailwindcss": "^4.1.13",
        "tslib": "^2.8.1"
    },
    "devDependencies": {
        "@angular-eslint/schematics": "^20.2.0",
        "@angular/build": "^20.3.1",
        "@angular/cli": "^20.3.1",
        "@angular/compiler-cli": "^20.3.0",
        "@types/jasmine": "~5.1.9",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "jasmine-core": "~5.10.0",
        "karma": "~6.4.4",
        "karma-chrome-launcher": "~3.2.0",
        "karma-coverage": "~2.2.1",
        "karma-jasmine": "~5.1.0",
        "karma-jasmine-html-reporter": "~2.1.0",
        "typescript": "~5.9.2"
    }
}
